@page
@model AuthenticationModel.Models


<div class="centeredFront">
    <div><img src="../../../logo_light.png" /></div>

    <h1>Meet, share, exchange!</h1>
    <h2>Meet people with similar Book or Movie preferences, share your opinion and exchange with others!</h2>
</div>

  <div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h1>Log me in</h1>
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="MyLoginModel.Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="MyLoginModel.Input.Email" class="form-label"></label>
                    <span asp-validation-for="MyLoginModel.Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="MyLoginModel.Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="MyLoginModel.Input.Password" class="form-label"></label>
                    <span asp-validation-for="MyLoginModel.Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="MyLoginModel.Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="MyLoginModel.Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.MyLoginModel.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="MyRegisterModel.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="MyRegisterModel.Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="MyRegisterModel.Input.Email"></label>
                <span asp-validation-for="MyRegisterModel.Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="MyRegisterModel.Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="MyRegisterModel.Input.Password"></label>
                <span asp-validation-for="MyRegisterModel.Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="MyRegisterModel.Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="MyRegisterModel.Input.ConfirmPassword"></label>
                <span asp-validation-for="MyRegisterModel.Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
