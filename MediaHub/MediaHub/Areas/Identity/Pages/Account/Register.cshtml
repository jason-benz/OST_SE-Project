@page
@model RegisterModel

<div class="centeredFront">
    <a href="~/"><img src="../../../logo_light.png" /></a>

    <h1>Meet, share, exchange!</h1>
    <h2>Meet people with similar Book or Movie preferences, share your opinion and exchange with others!</h2>

<div class="row">
    <div class="col-md-4">
        <section>
        <form id="registerForm" class="shadow-box" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1>Register</h1>
            <h2>Create a new account</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            <div class="login-links">
                <p>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login with existing user</a>
                </p>
            </div>
        </form>
        </section>
    </div>
</div>
</div>